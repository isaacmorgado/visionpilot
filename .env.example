# Anthropic API Key (required)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Model to use (optional, defaults to claude-sonnet-4-20250514)
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Screenshot directory (optional, defaults to ./screenshots)
SCREENSHOT_DIR=./screenshots

# Log level (optional, defaults to INFO)
LOG_LEVEL=INFO

# Maximum actions per session (safety limit)
MAX_ACTIONS_PER_SESSION=100

# Screenshot quality (1-100, lower = smaller files)
SCREENSHOT_QUALITY=85

# Action delay in seconds (time between actions)
ACTION_DELAY=0.5
